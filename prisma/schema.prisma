generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  @@map("users")
}

model Categories {
  id    Int     @id @default(autoincrement())
  name  String  @unique @db.VarChar(127)
  Tests Tests[]

  @@map("categories")
}

model Tests {
  id                  Int    @id @default(autoincrement())
  name                String
  pdfUrl              String
  categoryId          Int
  teacherDisciplineId Int

  category          Categories         @relation(fields: [categoryId], references: [id])
  teacherDiscipline TeacherDisciplines @relation(fields: [teacherDisciplineId], references: [id])

  @@map("tests")
}

model Disciplines {
  id     Int    @id @default(autoincrement())
  name   String @unique @db.VarChar(127)
  termId Int

  term               Terms                @relation(fields: [termId], references: [id])
  TeacherDisciplines TeacherDisciplines[]

  @@map("disciplines")
}

model TeacherDisciplines {
  id           Int     @id @default(autoincrement())
  teacherId    Int
  disciplineId Int
  Tests        Tests[]

  teacher    Teachers    @relation(fields: [teacherId], references: [id])
  discipline Disciplines @relation(fields: [disciplineId], references: [id])

  @@map("teacherDisciplines")
}

model Terms {
  id          Int           @id @default(autoincrement())
  number      Int           @unique
  Disciplines Disciplines[]

  @@map("terms")
}

model Teachers {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  TeacherDisciplines TeacherDisciplines[]

  @@map("teachers")
}
